{
  "name": "web3project",
  "private": true,
  "scripts": {
    "migrate:db": "dotenv -e .env -- npx prisma migrate dev --schema=packages/db/prisma/schema.prisma",
    "generate:prisma":"yarn run loadenv -- yarn run generate ",
    "generate":"cd packages/db/ && yarn run generate",
    "reset:db":"yarn run loadenv -- yarn run prisma:reset",
    "prisma:reset":"cd packages/db && yarn run reset",
    "studio": "dotenv -e .env -- npm run init:studio",
    "init:studio" : "cd packages/db && npx prisma studio & ",
    "dev:backend" : "dotenv -- turbo dev --filter=backend",
    "loadenv" : "dotenv -e .env",
    "build": "turbo build",
    "dev": "dotenv -- turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "devDependencies": {
    "@repo/eslint-config": "*",
    "@repo/typescript-config": "*",
    "prettier": "^3.2.5",
    "turbo": "latest",
    "dotenv-cli": "latest"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]
}
